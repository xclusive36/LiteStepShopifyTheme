<div id="cart-drawer" class="cart-drawer" aria-hidden="true" role="dialog" aria-modal="true">
  <div class="cart-inner">
    <button class="cart-close" aria-label="Close">×</button>
    <h2>Your cart <span id="cart-count" aria-live="polite">(0)</span></h2>
  <div id="cart-items" class="cart-items">Loading…</div>
  <div id="cart-announcer" class="visually-hidden" aria-live="polite" aria-atomic="true"></div>
    <div class="cart-footer">
      <div id="cart-subtotal" class="cart-subtotal"></div>
      <a href="/checkout" class="checkout-button">Checkout</a>
    </div>
  </div>
</div>
