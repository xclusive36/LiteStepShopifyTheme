{% schema %}
{
  "name": "Hero",
  "settings": [
    {"type": "image_picker", "id": "image", "label": "Background image"},
    {"type": "text", "id": "heading", "label": "Heading", "default": "Welcome to LiteStep"},
    {"type": "text", "id": "subheading", "label": "Subheading", "default": "Fast. Flexible. Ready."}
  ]
}
{% endschema %}

<section class="hero">
  {% if section.settings.image %}
    {{ section.settings.image | image_url | img_tag }}
  {% endif %}
  <div class="hero-content">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.subheading }}</p>
  </div>
</section>
