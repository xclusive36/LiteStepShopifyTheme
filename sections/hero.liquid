<section id="hero" class="hero">
  <div class="hero-inner">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.subheading }}</p>
    {% if section.settings.cta_label != blank and section.settings.cta_url != blank %}
      <a class="btn" href="{{ section.settings.cta_url }}">{{ section.settings.cta_label }}</a>
    {% endif %}
  </div>

  {% schema %}
  {
    "name": "Hero",
    "settings": [
      { "type": "image_picker", "id": "image", "label": "Background image" },
      { "type": "text", "id": "heading", "label": "Heading", "default": "LiteStep â€” fast, accessible themes" },
      { "type": "text", "id": "subheading", "label": "Subheading", "default": "A lightweight Shopify starter theme with accessible quickview and cart" },
      { "type": "text", "id": "cta_label", "label": "CTA label" },
      { "type": "url", "id": "cta_url", "label": "CTA url" }
    ],
    "blocks": [],
    "presets": [{ "name": "Hero" }]
  }
  {% endschema %}
</section>
