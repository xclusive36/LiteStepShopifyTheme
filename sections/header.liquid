<header class="site-header">
  <div class="site-header-inner">
    <div class="site-logo">
      <a href="/">{{ shop.name }}</a>
    </div>
    <div class="site-nav">
      <!-- ...existing nav... -->
    </div>
    <div class="site-cart">
      <button aria-label="Open cart" id="cart-toggle">Cart <span data-cart-count>0</span></button>
    </div>
  </div>
  {% comment %} include the cart drawer snippet so it's available on all pages {% endcomment %}
  {% render 'cart-drawer' %}
</header>
{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "logo_alt",
      "label": "Logo alt text",
      "default": "{{ shop.name }}"
    }
  ],
  "presets": [
    {
      "name": "Header"
    }
  ]
}
{% endschema %}

<header class="site-header" role="banner">
  <div class="header-inner">
    <div class="site-logo">
      <a href="/">
        {% if section.settings.logo != blank %}
          <img src="{{ section.settings.logo | image_url: '300x' }}" alt="{{ section.settings.logo_alt | escape }}" width="300" height="60" loading="eager" />
        {% else %}
          <img src="{{ 'logo-default.svg' | asset_url }}" alt="{{ shop.name | escape }}" width="200" height="40" loading="eager" />
        {% endif %}
      </a>
    </div>

    <nav class="site-nav" role="navigation" aria-label="Main menu">
      {% if linklists.main %}
        <ul>
          {% for link in linklists.main.links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      {% endif %}
    </nav>

    <div class="header-actions">
      <a href="/cart" class="cart-link">Cart</a>
    </div>
  </div>
</header>
